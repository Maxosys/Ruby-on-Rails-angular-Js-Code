
<div class="jumbotron text-center">
  <h2>BitMinistry : Banking Application</h2>  
</div>
  
<div class="container">
  <div class="row">
    <%= render 'leftbar' %>
    <div class="col-sm-6"  >
    <div class="col-sm-12">
      
      <label> Transfer Money: <span class="pull-right" style="color: #60E45A"> <% if  $msg.present? %> <%=$msg%> <% end %></span></label>

    </div>
    <div class="col-sm-12" style="margin-top: 15px;">
    <div class="col-sm-6">
      
      <label style="color: red">Your Total Amount :</label> <strong> <%=@totalAmonut%></strong>

    </div>
      <div class="col-sm-6">

      <form method="post" name="transfermoney">
           <!-- <div ng-view></div> -->        
          <div class="form-group">
            <label for="exampleInputEmail1">Transfer to User</label>
              <input type="text" class="form-control"  name="tousername" placeholder="Enter To Username" required="" >
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Transfer Amount</label> 
            <input type="text" class="form-control" placeholder="Enter Amount" name="toamount" required="">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1"> You </label> 
            <input type="text" class="form-control" readonly="" name="username" value="<%=session[:username]%>">
            <input type="hidden" name="fromamount" value="<%=@totalAmonut%>">
          </div>
          <div class="form-group">
          <input type="submit" class="btn btn-primary" name="submittransferamount" value="Transfer">
          </div>
      </form>
      </div>

    </div>

    </div>
    <div class="col-sm-2">
    
    </div>
  </div>
</div>
